---
interface Props {
	name?: string;
	description?: string;
	avatar?: string;
}

const { 
	name = "LYGreen", 
	description = "互联网中的小透明",
	avatar = "https://api.dicebear.com/7.x/avataaars/svg?seed=Felix"
} = Astro.props as Props;
---

<div class="profile">
    <div class="avatar">
        <img src={avatar} alt="头像">
    </div>
    <h3>{name}</h3>
    <p>{description}</p>
    <div style="margin-top:15px;">
        <i class="fab fa-github" style="font-size:1.2em; margin:0 5px; color:#555;"></i>
        <i class="fab fa-twitter" style="font-size:1.2em; margin:0 5px; color:#1DA1F2;"></i>
        <i class="fab fa-bilibili" style="font-size:1.2em; margin:0 5px; color:#FB7299;"></i>
    </div>
</div>

<style>

    /* ===== 个人信息 ===== */
    .profile {
        background: var(--card-bg);
        border-radius: 15px;
        padding: 20px;
        margin-bottom: 20px;
        box-shadow: var(--shadow);
        border: 2px solid white;
        text-align: center;
    }
    .avatar {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        border: 4px solid var(--primary-pink);
        margin: 0 auto 10px;
        background-color: #eee;
        overflow: hidden;
    }
    .avatar img { 
        width: 100%; 
        height: 100%; 
        object-fit: cover; 
    }

</style>
